{
  "name": "jarzon/primbase",
  "type": "project",
  "autoload": {
    "psr-4": {"PrimBase\\": "src/"}
  },
  "scripts": {
    "post-create-project-cmd": [
      "Prim\\Console\\CreateProject::postCreateProject",
      "npm install"
    ],
    "clearCache": "rm -rf app/cache/*",
    "pre-update-cmd": "npm run gulpstop",
    "post-update-cmd": "npm run gulprestart"
  },
  "config": {
    "bin-dir": "bin",
    "discard-changes": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "require": {
    "php": ">=8.1.0",
    "ext-pdo": "*",

    "jarzon/prim": "~0.19.0",
    "jarzon/primconsole": "~0.4.0",
    "jarzon/primpack": "~v1.16.6",
    "robmorgan/phinx": "~0.12.10",

    "jarzon/form": "~1.9.30",
    "jarzon/pagination": "~0.2.1",
    "jarzon/localization": "~0.3.0",
    "jarzon/querybuilder": "~v0.7.19",

    "jarzon/userpack": "~v0.19.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.7.0"
  }
}
